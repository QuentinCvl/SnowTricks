{% block _trick_tricks_images_widget %}
  <p>Ajouter des images pour illustrer votre trick !</p>

  {{ form_widget(formTrick) }}

  <input type="hidden" id="widgets-counter-pictures" value="0">

  <div class="form-group mb-3">
    <button type="button" id="add-pictures" class="btn btn-info mt-2">Ajouter une image</button>
  </div>
{% endblock %}

{% block _trick_tricks_images_entry_row %}
  {{ form_widget(formTrick) }}
{% endblock %}

{% block _trick_tricks_images_entry_widget %}
  <div class="form-group" id="block_{{ id }}">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-center m-3  pt-3 clearfix position-relative">
          {% if formTrick.filepicture.parent.vars.value.url is defined %}
          <img class="w-100 rounded avatar" id="{{ formTrick.filepicture.vars.id }}visual"
               src="{{ formTrick.filepicture.parent.vars.value.url }}">
          <label class="position-absolute bg-light rounded px-2 py-1 left-0 bottom-0 ml-2 mb-2 cursor-pointer">
            <div class="d-none">
              {{ form_widget(formTrick.tricksImages, {
                "label": false,
                "attr": {
                  'class' : 'd-none',
                  'required' : false
                }
              }) }}
            </div>
            <i class="fa fa-pencil-square-o"></i><span class="ml-1">Edit</span>
            {% endif %}
            {{ form_widget(formTrick.tricksImages, {
              "label": false,
              "attr": {
                'class' : 'd-none',
                'required' : true
              }
            }) }}
          </label>
        </div>

      </div>
      <div class="col-12 d-flex justify-content-center">
        <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger mx-auto">
          X
        </button>
      </div>
    </div>
  </div>

{% endblock %}

