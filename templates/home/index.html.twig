{% extends 'base.html.twig' %}

{% block additionnal_stylesheets %}
{% endblock %}

{% block body %}
  <div class="container my-5" id="tricks_list">
    <div class="row tricks_list">
      {# foreach tricks, display #}
      {% for trick in tricks %}
        <div class="card col-lg-4 mb-5 mx-3 tricks">
          <img src="https://dummyimage.com/300x200" class="card-img-top img-fluid" alt="...">
          <div class="card-body">
            <a href="{{ path('tricks_detail', {'slug': trick.slug }) }}">
              <h5 class="card-title">{{ trick.name }}</h5>
            </a>
            {# if user is connected #}
            <span class="tricks_edit">
              <i class="bi bi-pen-fill"></i>
            </span>
            <span class="tricks_delete">
              <i class="bi bi-trash3-fill"></i>
            </span>
            {# endif #}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
