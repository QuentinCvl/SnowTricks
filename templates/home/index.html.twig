{% extends 'base.html.twig' %}
{% import 'macros/alertes.html.twig' as utils %}

{% block additionnal_stylesheets %}
{% endblock %}

{% block body %}
  <header id="homepage">
    {% include 'menu/main_nav.html.twig' with {'position': 'fixed-top'} %}

    <div class="to-tricks">
      <a href="#tricks_list">
        <i class="bi bi-arrow-down-circle-fill"></i>
      </a>
    </div>
  </header>

  <div class="container my-5" id="tricks_list">
    <div class="row tricks_list">
      {% if tricks|length > 0 %}
        {% for trick in tricks %}
          <div class="card col-lg-4 mb-5 mx-3 tricks">
            <img src="{{asset('upload/')}}{{ trick.trickImages.first.src}}" class="card-img-top img-fluid"
                 alt="...">
            <div class="card-body">
              <a href="{{ path('tricks_detail', {'slug': trick.slug }) }}">
                <h5 class="card-title">{{ trick.name }}</h5>
              </a>
              {# if user is connected #}
              <span class="tricks_edit">
              <i class="bi bi-pen-fill"></i>
            </span>
              <span class="tricks_delete">
              <i class="bi bi-trash3-fill"></i>
            </span>
              {# endif #}
            </div>
          </div>
        {% endfor %}
      {% else %}
        {{ utils.alert('Pas de figure Ã  afficher pour le moment, revenez plus tard !', 'danger') }}
      {% endif %}
    </div>
  </div>
{% endblock %}
